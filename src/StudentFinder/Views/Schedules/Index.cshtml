@model IEnumerable<StudentFinder.ViewModels.ScheduleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Schedule</h2>

<p>
    <a class="btn btn-info btn-control" asp-action="Create">Add New Period</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromTime)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ToTime)
            </td>
           
            <td>
                <a class="btn btn-info btn-control" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-warning btn-control" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |              
                <a class="btn btn-danger btn-control" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
